<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- RequirementMapper.xml -->
<mapper namespace="com.itwillbs.mapper.RequirementMapper">

    <!-- 디비 컬럼과 도메인 객체 매핑 -->
    <!-- 프로퍼티명과 컬럼명 동일 시 생략가능  -->
    <resultMap type="com.itwillbs.domain.MAPDVO" id="requirement">
    	<result property="code" column="code"/>
    	<result property="category" column="category"/>
    	<result property="name" column="name"/>
    	<result property="size" column="size"/>
    	<result property="unit" column="unit"/>
    	<result property="inprice" column="inprice"/>
    	<result property="outprice" column="outprice"/>
    	<result property="image" column="image"/>
    	<result property="reg_emp" column="reg_emp"/>
    	<result property="reg_date" column="reg_date"/>
    	<result property="update_emp" column="update_emp"/>
    	<result property="update_date" column="update_date"/>
    	<result property="active" column="active"/>
    </resultMap>

    <!-- 요구사항 리스트 조회 -->
    <select id="selectRequirementList">
        SELECT * FROM requirement;
    </select>

    <!-- 요구사항 등록 -->
    <insert id="insertRequirement">
        INSERT INTO requirement (column1, column2, ...) VALUES (#{property1}, #{property2}, ...);
    </insert>

    <!-- 요구사항 수정 -->
    <update id="updateRequirement">
        UPDATE requirement SET column1 = #{property1}, column2 = #{property2}, ... WHERE id = #{id};
    </update>

    <!-- 요구사항 삭제 -->
    <delete id="deleteRequirement">
        DELETE FROM requirement WHERE id = #{id};
    </delete>

    <!-- 요구사항 상세 조회 -->
    <select id="selectRequirementById">
        SELECT * FROM requirement WHERE id = #{id};
    </select>

</mapper>
