<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- LineMapper.xml -->
<mapper namespace="com.itwillbs.mapper.LineMapper">

    <!-- 디비 컬럼과 도메인 객체 매핑 -->
    <!-- 프로퍼티명과 컬럼명 동일 시 생략가능  -->
    <resultMap type="com.itwillbs.domain.LineVO" id="line">
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="process" column="process"/>
        <result property="place" column="place"/>
        <result property="status" column="status"/>
        <result property="note" column="note"/>
        <result property="active" column="active"/>
    </resultMap>

    <!-- 라인 리스트 조회 -->
    <select id="selectLineList">
        SELECT * FROM line;
    </select>

    <!-- 라인 등록 -->
    <insert id="insertLine">
        INSERT INTO line (name, description, created_at) VALUES (#{name}, #{description}, #{created_at});
    </insert>

    <!-- 라인 수정 -->
    <update id="updateLine">
        UPDATE line SET name = #{name}, description = #{description}, updated_at = #{updated_at} WHERE id = #{id};
    </update>

    <!-- 라인 삭제 -->
    <delete id="deleteLine">
        DELETE FROM line WHERE id = #{id};
    </delete>

    <!-- 라인 상세 조회 -->
    <select id="selectLineById" resultMap="line">
        SELECT * FROM line WHERE id = #{id};
    </select>

</mapper>
