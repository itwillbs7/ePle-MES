<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- ClientMapper.xml -->
<mapper namespace="com.itwillbs.mapper.ClientMapper">

    <!-- 디비 컬럼과 도메인 객체 매핑 -->
    <!-- 프로퍼티명과 컬럼명 동일 시 생략가능  -->
    <resultMap type="com.itwillbs.domain.ClientVO" id="client">
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="condition" column="condition"/>
        <result property="items" column="items"/>
        <result property="ceo" column="ceo"/>
        <result property="manager" column="manager"/>
        <result property="address" column="address"/>
        <result property="address2" column="address2"/>
        <result property="tel" column="tel"/>
        <result property="phone" column="phone"/>
        <result property="fax" column="fax"/>
        <result property="email" column="email"/>
        <result property="note" column="note"/>
        <result property="active" column="active"/>
    </resultMap>

    <!-- 클라이언트 리스트 조회 -->
    <select id="selectClientList" resultMap="client">
        SELECT * FROM client;
    </select>

    <!-- 클라이언트 등록 -->
    <insert id="insertClient">
        INSERT INTO client (name, email, phone, address, reg_date) VALUES (#{name}, #{email}, #{phone}, #{address}, #{reg_date});
    </insert>

    <!-- 클라이언트 수정 -->
    <update id="updateClient">
        UPDATE client SET name = #{name}, email = #{email}, phone = #{phone}, address = #{address} WHERE id = #{id};
    </update>

    <!-- 클라이언트 삭제 -->
    <delete id="deleteClient">
        DELETE FROM client WHERE id = #{id};
    </delete>

    <!-- 클라이언트 상세 조회 -->
    <select id="selectClientById" resultMap="client">
        SELECT * FROM client WHERE id = #{id};
    </select>

</mapper>
